<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:FzLib.Avalonia.Controls"
    xmlns:cvt="using:ArchiveMaster.Converters"
    xmlns:fs="clr-namespace:ArchiveMaster.ViewModels.FileSystem"
    xmlns:v="using:ArchiveMaster.Views">
    <SolidColorBrush
        x:Key="DataGridCellFocusVisualPrimaryBrush"
        Color="Transparent" />
    <SolidColorBrush
        x:Key="DataGridCellFocusVisualSecondaryBrush"
        Color="Transparent" />

    <ControlTheme
        x:Key="{x:Type v:SimpleFileDataGrid}"
        BasedOn="{StaticResource {x:Type DataGrid}}"
        TargetType="v:SimpleFileDataGrid">
        <Setter Property="RowDetailsTemplate">
            <DataTemplate x:DataType="fs:SimpleFileInfo">
                <Border Padding="8">
                    <Border.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </Border.Styles>
                    <Grid
                        ColumnDefinitions="Auto,8,*"
                        RowDefinitions="Auto,8,Auto,8,Auto,8,Auto">
                        <Grid.Styles>
                            <Style Selector="TextBlock.Title">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </Grid.Styles>
                        <TextBlock
                            Classes="Title"
                            Text="文件名：" />
                        <SelectableTextBlock
                            Grid.Column="2"
                            Text="{Binding Name}" />

                        <TextBlock
                            Grid.Row="2"
                            Classes="Title"
                            Text="绝对路径：" />
                        <SelectableTextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="{Binding Path}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="4"
                            Classes="Title"
                            Text="相对路径：" />
                        <SelectableTextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Text="{Binding RelativePath}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Classes="Title"
                            Text="信息：" />
                        <SelectableTextBlock
                            Grid.Row="6"
                            Grid.Column="2"
                            Text="{Binding Message}" />

                    </Grid>
                </Border>
            </DataTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="*,8,Auto">
                    <Border
                        x:Name="DataGridBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid
                            ClipToBounds="True"
                            ColumnDefinitions="Auto,*,Auto"
                            RowDefinitions="Auto,*,Auto,Auto">
                            <DataGridColumnHeader
                                Name="PART_TopLeftCornerHeader"
                                Theme="{StaticResource DataGridTopLeftColumnHeader}" />
                            <DataGridColumnHeadersPresenter
                                Name="PART_ColumnHeadersPresenter"
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="2" />
                            <Rectangle
                                Name="PART_ColumnHeadersAndRowsSeparator"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Height="1"
                                VerticalAlignment="Bottom"
                                Fill="{DynamicResource DataGridGridLinesBrush}" />

                            <DataGridRowsPresenter
                                Name="PART_RowsPresenter"
                                Grid.Row="1"
                                Grid.Column="0"
                                ScrollViewer.IsScrollInertiaEnabled="{TemplateBinding IsScrollInertiaEnabled}">
                                <DataGridRowsPresenter.GestureRecognizers>
                                    <ScrollGestureRecognizer
                                        CanHorizontallyScroll="True"
                                        CanVerticallyScroll="True"
                                        IsScrollInertiaEnabled="{Binding (ScrollViewer.IsScrollInertiaEnabled), ElementName=PART_RowsPresenter}" />
                                </DataGridRowsPresenter.GestureRecognizers>
                            </DataGridRowsPresenter>
                            <Rectangle
                                Name="PART_BottomRightCorner"
                                Grid.Row="2"
                                Grid.Column="2"
                                Fill="{DynamicResource DataGridScrollBarsSeparatorBackground}" />
                            <ScrollBar
                                Name="PART_VerticalScrollbar"
                                Grid.Row="1"
                                Grid.Column="2"
                                Width="{DynamicResource ScrollBarSize}"
                                Orientation="Vertical" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="1"
                                ColumnDefinitions="Auto,*">
                                <Rectangle Name="PART_FrozenColumnScrollBarSpacer" />
                                <ScrollBar
                                    Name="PART_HorizontalScrollbar"
                                    Grid.Column="1"
                                    Height="{DynamicResource ScrollBarSize}"
                                    Orientation="Horizontal" />
                            </Grid>
                            <Border
                                x:Name="PART_DisabledVisualElement"
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource DataGridDisabledVisualElementBackground}"
                                CornerRadius="2"
                                IsHitTestVisible="False"
                                IsVisible="{Binding !$parent[DataGrid].IsEnabled}" />
                        </Grid>

                    </Border>
                    <Grid
                        Grid.Row="2"
                        Margin="4"
                        ColumnDefinitions="Auto,0,Auto,16,*">
                        <StackPanel
                            x:Name="stkSelectionButtons"
                            Margin="0,0,8,0"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Icon"
                                Content="{StaticResource SelectAll}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="全选" />
                            <Button
                                Classes="Icon"
                                Content="{StaticResource Switch}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="反选" />
                            <Button
                                Classes="Icon"
                                Content="{StaticResource ClearSelection}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="全不选" />
                            <ToggleButton
                                Classes="Icon"
                                Content="{StaticResource MultiSelect}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="仅处理选中的行" />
                            <Button
                                Classes="Icon"
                                Content="{StaticResource Search}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="搜索">
                                <Button.Flyout>
                                    <Flyout>
                                        <Grid ColumnDefinitions="200,8,Auto">
                                            <TextBox />
                                            <Button
                                                Grid.Column="2"
                                                Classes="Icon"
                                                Content="{StaticResource Search}"
                                                FontFamily="{StaticResource IconFont}"
                                                ToolTip.Tip="搜索" />
                                        </Grid>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <Button
                                Classes="Icon"
                                Content="{StaticResource Filter}"
                                FontFamily="{StaticResource IconFont}"
                                ToolTip.Tip="筛选">
                                <Button.Flyout>
                                    <Flyout>
                                        <Grid RowDefinitions="Auto,8,Auto">
                                            <v:FileFilterPanel />
                                            <Button
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                Content="筛选" />
                                        </Grid>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <ContentControl
                            Grid.Column="2"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            IsVisible="{Binding $parent[DataGrid].ShowCount}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    IsVisible="{Binding $parent[DataGrid].ItemsSource, Converter={x:Static cvt:Converters.IsNotNull}}"
                                    Text="{Binding $parent[DataGrid].ItemsSource.Count, StringFormat='共 {0} 项'}" />
                            </StackPanel>
                        </ContentControl>
                        <ContentControl
                            Grid.Column="4"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Footer}" />
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme
        x:Key="{x:Type v:TreeFileDataGrid}"
        BasedOn="{StaticResource {x:Type v:SimpleFileDataGrid}}"
        TargetType="v:TreeFileDataGrid">
        <Setter Property="RowDetailsTemplate" Value="{x:Null}" />
        <Setter Property="Template">
            <ControlTemplate>

                <Grid RowDefinitions="*,8,Auto">
                    <Border
                        x:Name="DataGridBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid
                            ClipToBounds="True"
                            ColumnDefinitions="Auto,*,Auto"
                            RowDefinitions="Auto,*,Auto,Auto">
                            <DataGridColumnHeader
                                Name="PART_TopLeftCornerHeader"
                                Theme="{StaticResource DataGridTopLeftColumnHeader}" />
                            <DataGridColumnHeadersPresenter
                                Name="PART_ColumnHeadersPresenter"
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="2" />
                            <Rectangle
                                Name="PART_ColumnHeadersAndRowsSeparator"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Height="1"
                                VerticalAlignment="Bottom"
                                Fill="{DynamicResource DataGridGridLinesBrush}" />

                            <DataGridRowsPresenter
                                Name="PART_RowsPresenter"
                                Grid.Row="1"
                                Grid.Column="0"
                                ScrollViewer.IsScrollInertiaEnabled="{TemplateBinding IsScrollInertiaEnabled}">
                                <DataGridRowsPresenter.GestureRecognizers>
                                    <ScrollGestureRecognizer
                                        CanHorizontallyScroll="True"
                                        CanVerticallyScroll="True"
                                        IsScrollInertiaEnabled="{Binding (ScrollViewer.IsScrollInertiaEnabled), ElementName=PART_RowsPresenter}" />
                                </DataGridRowsPresenter.GestureRecognizers>
                            </DataGridRowsPresenter>
                            <Rectangle
                                Name="PART_BottomRightCorner"
                                Grid.Row="2"
                                Grid.Column="2"
                                Fill="{DynamicResource DataGridScrollBarsSeparatorBackground}" />
                            <ScrollBar
                                Name="PART_VerticalScrollbar"
                                Grid.Row="1"
                                Grid.Column="2"
                                Width="{DynamicResource ScrollBarSize}"
                                Orientation="Vertical" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="1"
                                ColumnDefinitions="Auto,*">
                                <Rectangle Name="PART_FrozenColumnScrollBarSpacer" />
                                <ScrollBar
                                    Name="PART_HorizontalScrollbar"
                                    Grid.Column="1"
                                    Height="{DynamicResource ScrollBarSize}"
                                    Orientation="Horizontal" />
                            </Grid>
                            <Border
                                x:Name="PART_DisabledVisualElement"
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource DataGridDisabledVisualElementBackground}"
                                CornerRadius="2"
                                IsHitTestVisible="False"
                                IsVisible="{Binding !$parent[DataGrid].IsEnabled}" />
                        </Grid>

                    </Border>
                    <Grid
                        Grid.Row="2"
                        Margin="4"
                        ColumnDefinitions="Auto,16,*">

                        <ContentControl
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            IsVisible="{Binding $parent[DataGrid].ShowCount}">
                            <TextBlock
                                IsVisible="{Binding $parent[DataGrid].ItemsSource, Converter={x:Static cvt:Converters.IsNotNull}}"
                                Text="{Binding $parent[DataGrid].ItemsSource, Converter={x:Static cvt:TreeFileDataGridStatisticsConverter.Instance}}" />
                        </ContentControl>
                        <ContentControl
                            Grid.Column="2"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Footer}" />
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>