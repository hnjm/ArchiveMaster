<UserControl
    x:Class="ArchiveMaster.Views.FilePickerTextBox"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:ArchiveMaster.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ArchiveMaster.Views"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="Auto,0,*,0,Auto,0,Auto">
        <TextBlock
            Margin="0,0,8,0"
            VerticalAlignment="Center"
            IsVisible="{Binding ElementName=root, Path=Label, Converter={x:Static cvt:Converters.IsNotNull}}"
            Text="{Binding ElementName=root, Path=Label}" />
        <TextBox
            Grid.Column="2"
            VerticalAlignment="Center"
            AcceptsReturn="{Binding ElementName=root, Path=AllowMultiple}"
            MaxLines="3"
            Text="{Binding ElementName=root, Path=FileNames}"
            TextWrapping="{Binding ElementName=root, Path=AllowMultiple, Converter={x:Static cvt:Converters.TextWrapping}}" />
        <Button
            Grid.Column="4"
            Margin="8,0,0,0"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="{Binding ElementName=root, Path=ButtonContent}" />
        <views:FileFilterControl
            Grid.Column="6"
            Margin="8,0,0,0"
            VerticalAlignment="Center"
            ButtonContent="筛选.."
            Filter="{Binding ElementName=root, Path=Filter}"
            IsVisible="{Binding ElementName=root, Path=IsFilterButtonVisible}" />
    </Grid>
</UserControl>
