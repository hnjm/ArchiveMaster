<UserControl
    x:Class="ArchiveMaster.Views.BackupLogsPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:ArchiveMaster.Converters"
    xmlns:cvt="using:ArchiveMaster.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:Microsoft.Extensions.Logging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:me="using:FzLib.Avalonia.MarkupExtensions"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,8,*">
        <Grid ColumnDefinitions="Auto,8,Auto,32,Auto,8,Auto,8,Auto,8,Auto,32,*,8,Auto,0,Auto">
            <TextBlock Text="类型：" />
            <ComboBox
                Grid.Column="2"
                DisplayMemberBinding="{Binding ., Converter={x:Static cvt:Converters.LogMap}}"
                ItemsSource="{me:EnumValues l:LogLevel}"
                SelectedItem="{Binding LogType}" />

            <TextBlock
                Grid.Column="4"
                Text="时间范围：" />
            <TextBox
                Grid.Column="6"
                Text="{Binding LogTimeFrom}" />
            <TextBlock
                Grid.Column="8"
                Text="至" />
            <TextBox
                Grid.Column="10"
                Text="{Binding LogTimeTo}" />
            <TextBox
                Grid.Column="12"
                Text="{Binding LogSearchText}"
                Watermark="关键词搜索" />
            <Button
                Grid.Column="14"
                Classes="Icon"
                Command="{Binding SearchLogsCommand}"
                Content="{StaticResource Search}" />
            <ComboBox
                Grid.Column="16"
                Margin="32,0,0,0"
                DisplayMemberBinding="{Binding ., StringFormat='第{0}页'}"
                IsVisible="{Binding LogPages, Converter={x:Static cvt:Converters.IsNotNull}}"
                ItemsSource="{Binding LogPages}"
                SelectedIndex="{Binding LogPage, Mode=TwoWay}">
                <Interaction.Behaviors>
                    <EventTriggerBehavior EventName="" />
                </Interaction.Behaviors>
            </ComboBox>
        </Grid>
        <DataGrid
            Grid.Row="2"
            IsReadOnly="True"
            ItemsSource="{Binding Logs}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Type, Converter={x:Static cvt:Converters.LogMap}, Mode=OneWay}"
                    Header="类型" />
                <DataGridTextColumn
                    Binding="{Binding Time, Converter={x:Static cvt:Converters.DateTime}, Mode=OneWay}"
                    Header="时间" />
                <DataGridTextColumn
                    Binding="{Binding Message}"
                    Header="信息" />
                <DataGridTemplateColumn
                    CanUserResize="False"
                    Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Classes="Link"
                                    Command="{Binding $parent[DataGrid].DataContext.ShowDetailCommand}"
                                    CommandParameter="{Binding .}"
                                    Content="详情"
                                    IsVisible="{Binding Detail, Converter={x:Static cvt:Converters.IsNotNull}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>